{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@account/*": [ "./src/account/*" ],
      "@app/*": [ "./src/app/*" ],
      "@shared/*": [ "./src/shared/*" ],
      "@store/*": [ "./src/store/*" ],
      "@node_modules/*": [ "./node_modules/*" ]
    }
  }, 
  "exclude": [
    "node_modules"
  ]  
}
